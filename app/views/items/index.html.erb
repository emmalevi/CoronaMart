<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our items</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @items.count %> items out of our <%= Item.count %> on our website.</p>
      <% else %>
        <p>All <%= Item.count %> items.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-4">
        <div class="item-card">
          <div class="item-card-image" style="background-image: url('<%= item.picture_url %>')"></div>
          <div class="item-card-content">
            <div class="item-card-title">
              <h4><%= item.name %></h4>
            </div>
            <p><%= item.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= item.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= item.price_per_night %>
              </div>
            </div>
          </div>
          <div class="item-card-actions">
            <%= link_to 'More info', flat_path(item) %>
            <%= link_to 'Edit', edit_flat_path(item), class: 'ml-3 text-warning' %>
            <%= link_to "Remove", flat_path(item),
                method: :delete, 
                data: { confirm: "Are you sure?" },
                class: 'ml-3 text-danger'
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
